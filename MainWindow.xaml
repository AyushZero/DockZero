<Window
    x:Class="DockZero.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DockZero"
    Title="DockZero"
    Width="900"
    Height="18"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    Topmost="True"
    ResizeMode="NoResize"
    WindowStartupLocation="Manual"
    MouseEnter="Window_MouseEnter"
    MouseLeave="Window_MouseLeave"
    Loaded="Window_Loaded"
    KeyDown="Window_KeyDown">

    <Window.Resources>
        <Style x:Key="TextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="LineHeight" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style x:Key="MediaButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="MediaIconStyle" TargetType="Path">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Fill" Value="White"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
        
        <Storyboard x:Key="ExpandAnimation">
            <DoubleAnimation 
                Storyboard.TargetName="MainPanel"
                Storyboard.TargetProperty="Height"
                From="5" To="18" Duration="0:0:0.2"/>
            <DoubleAnimation 
                Storyboard.TargetName="MainPanel"
                Storyboard.TargetProperty="Width"
                From="100" To="900" Duration="0:0:0.2"/>
            <DoubleAnimation 
                Storyboard.TargetName="DateText"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation 
                Storyboard.TargetName="TimeText"
                Storyboard.TargetProperty="Opacity"
                From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="CollapseAnimation">
            <DoubleAnimation 
                Storyboard.TargetName="MainPanel"
                Storyboard.TargetProperty="Height"
                From="18" To="5" Duration="0:0:0.2"/>
            <DoubleAnimation 
                Storyboard.TargetName="MainPanel"
                Storyboard.TargetProperty="Width"
                From="900" To="100" Duration="0:0:0.2"/>
            <DoubleAnimation 
                Storyboard.TargetName="DateText"
                Storyboard.TargetProperty="Opacity"
                From="1" To="0" Duration="0:0:0.2"/>
            <DoubleAnimation 
                Storyboard.TargetName="TimeText"
                Storyboard.TargetProperty="Opacity"
                From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Border x:Name="MainPanel"
                Width="100"
                Height="5"
                CornerRadius="0,0,15,15"
                VerticalAlignment="Top">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D9000000" Offset="0"/>
                    <GradientStop Color="#D9000000" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect 
                    BlurRadius="15" 
                    Direction="270" 
                    ShadowDepth="5" 
                    Color="Black" 
                    Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Center Section -->
                <StackPanel Grid.Column="1" Margin="0,0,0,0" MinWidth="10" HorizontalAlignment="Center">
                    <Border Background="#0DFFFFFF" CornerRadius="4" Padding="8,2" Height="15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Name="TimeText"
                                     Text="00:00"
                                     Style="{StaticResource TextStyle}"
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,8,0"/>
                            <TextBlock x:Name="DateText" 
                                     Text="4th May '25" 
                                     Style="{StaticResource TextStyle}"
                                     Foreground="#CCFFFFFF" 
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Section - Media Controls -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center">
                    <!-- Media Controls -->
                    <Border Background="#0DFFFFFF" 
                            CornerRadius="4" 
                            Padding="8,2" 
                            Height="15">
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center">
                            <Button x:Name="PreviousButton"
                                    Style="{StaticResource MediaButtonStyle}"
                                    Click="PreviousButton_Click">
                                <Path Data="M6 6h2v12H6zm3.5 6l8.5 6V6z" 
                                      Style="{StaticResource MediaIconStyle}"/>
                            </Button>
                            <Button x:Name="PlayPauseButton"
                                    Style="{StaticResource MediaButtonStyle}"
                                    Click="PlayPauseButton_Click">
                                <Path Data="M8 5v14l11-7z" 
                                      Style="{StaticResource MediaIconStyle}"/>
                            </Button>
                            <Button x:Name="NextButton"
                                    Style="{StaticResource MediaButtonStyle}"
                                    Click="NextButton_Click">
                                <Path Data="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z" 
                                      Style="{StaticResource MediaIconStyle}"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
